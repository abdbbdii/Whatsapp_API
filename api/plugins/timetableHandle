# from api.whatsapp_api_handle import Message

pluginInfo = {
    "command_name": "timetable",
    "admin_privilege": False,
    "description": "Make a timetable for your lectures and get a google calender based on your lectures.",
    "internal": False,
}

# def handle_function(message: Message):
#     ...
schedule = {
    "session": int(input("Enter the session year: ")),
    "section": input("Enter the section: "),
    "lecture": {},
}

for day in ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"]:
    print(f"Enter the lectures for {day}:")
    schedule["lecture"][day] = []
    for i in range(8):
        print(f"Enter the details for lecture {i + 1}:")
        schedule["lecture"][day].append(
            {
                "name": input("Enter the name of the lecture: "),
                "room": input("Enter the room number: "),
            }
        )

print(schedule)
